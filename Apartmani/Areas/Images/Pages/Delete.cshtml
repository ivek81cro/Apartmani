@page
@model Apartmani.Pages.Images.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Image</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image.Path)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image.Path)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image.ImageCategory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image.ImageCategory.Name)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Image.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
    @{
        string s = "/" + Model.Image.Path.Replace('\\', '/');
    }
    <img src="@s" class="img-fluid mt-3" />
</div>
